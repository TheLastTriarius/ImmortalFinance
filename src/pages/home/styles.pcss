.content {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: flex-start;
  flex-wrap: nowrap;
}

.chartContainer {
  padding: 0 0.625rem 0 2.8125rem;
  flex: 1;
  height: 100%;
  position: relative;
}

.aside {
  width: 31.75rem;
  height: 100%;
  border-left: solid 1px var(--deep-grey);
  box-shadow: var(--vertical-shadow);
}
