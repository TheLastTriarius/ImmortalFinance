.root {
  position: absolute;
  width: 1.25rem;
  height: 1.25rem;
  border-radius: 50%;
  border: 1px solid var(--yellow);
  display: flex;
  justify-content: center;
  align-items: center;
  user-select: none;
}

.question {
  color: var(--yellow);
  font-size: 0.9rem;
  letter-spacing: 0.29px;
  font-weight: 800;
  line-height: 1;
}

.closeIcon {
  width: 0.5rem;
  height: 0.5rem;
}
